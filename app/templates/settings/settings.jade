ion-view.frame-without-sidebar.settings-page(view-title='{{vm.neuron.title}}')
  ion-content
    back-button.arrow.back-arrow
    .frame
      .frame-container.content-settings
        .settings.row
          .panel-left.col-50.panel-left-margin-right
            .content-title-settings.border-bottom-settings {{ ::'setting.settings' | translate }}
            .title-label Level
            .title-label-1 1
            .title-label-1 2
            .title-label-1 3
            .drag-panel
              .row(ng-repeat="config in vm.preferences")
                .range-left-border
                .controll
                  span.content-subtitle-settings {{ ::'content.kind.' + config.kind | translate }}
                  input(type='range', min='1', max='3', step='1',
                  value="{{config.level}}",
                  ng-model="config.level",
                  ng-change="vm.contentSettings(config)")
                .range-right-border
          .panel-right.col-50.panel-right-margin-right
            .content-title-settings.border-bottom-settings {{ ::'setting.interests' | translate }}
            .label {{ ::'setting.choose-interest' | translate }}
            .interests-list
              .row(ng-repeat='interest in vm.interests', ng-if='$index %3 === 0')
                .col.col-35(ng-if='$index < vm.interests.length')
                  span.title {{vm.interests[$index].interest}}
                  img(ng-src='{{vm.interests[$index].src}}',
                      ng-click="vm.selectInterest(vm.interests[$index])",
                      ng-class="{'interest-selected': vm.interests[$index].selected }")
                .col.col-30(ng-if='$index+1 < vm.interests.length')
                  span.title {{vm.interests[$index+1].interest}}
                  img(ng-src='{{vm.interests[$index+1].src}}',
                      ng-click="vm.selectInterest(vm.interests[$index+1])"
                      ng-class="{'interest-selected': vm.interests[$index+1].selected }")
                .col.col-35(ng-if='$index+2 < vm.interests.length')
                  span.title {{vm.interests[$index+2].interest}}
                  img(ng-src='{{vm.interests[$index+2].src}}',
                      ng-click="vm.selectInterest(vm.interests[$index+2])"
                      ng-class="{'interest-selected': vm.interests[$index+2].selected }")
              .row
                img.btn-guide(src='images/info_M.png'
                            ui-sref="guide")
