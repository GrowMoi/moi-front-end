ion-view.frame-without-buttons.search-view-max(view-title='Friends')
  ion-content
    moi-sound(sound="sounds/read_content.mp3" background-sound="true")
    .arrow.back-arrow(back-button image-url="images/back-arrow.png")
    .flecha-sidebar(ng-click="toggleDrawer()")
      img(src="images/flecha_1.png")
    .frame
      .frame-container.main-search-view
        .content-searches
          form(ng-submit='usersmodel.reloadSearch()')
            label.item.item-input
              input(type='text',
                    required='required',
                    ng-model='usersmodel.query',
                    placeholder="{{ ::'searches.search' | translate }}")
            input(
                type='submit',
                value=''
              ).button
  moi-sidebar
