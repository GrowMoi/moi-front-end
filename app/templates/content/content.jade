ion-view.content-view-max(view-title='Content')
  ion-content
    .arrow.back-arrow(back-button image-url="images/back-arrow.png")
    .flecha-sidebar(ng-click="toggleDrawer()")
      img(src="images/flecha_1.png")
    .main-content-view
      .row.content-max-view
        .col
          .row.border-bottom.row-content-title
            .content-title {{vm.content.title}}
            .corner.title-TR
          .row.row-content-text
            .corner.description-TL
            .content-text {{vm.content.description}}
            .corner.description-TR
        .col.border-right.border-left.middle-column-margin-bottom
          .row.border-bottom
            .col.image-center
              img.format-image(src='{{vm.content.media[0]}}', ng-click='vm.showImage(vm.content.media[0])')
            .corner.image-TR
          .row
            .col
              .row.text-notes
                .content-subtitle {{ ::'content.max.coments' | translate }}
              .row
                textarea.content-comments(ng-model='vm.content.user_notes', ng-blur='vm.sendNotes()')
        .col
          .row
            .col
              .row.border-bottom
                .content-subtitle-gallery {{ ::'content.max.media' | translate }}
              .row
                slide-gallery(images='vm.media', item-per-slide='4')
            .corner.gallery-TR
          .row
            .col.recomended-margin-top
              .row.border-bottom
                .content-subtitle {{ ::'content.max.recommended ' | translate }}
              .row(ng-repeat='row in vm.recommendedContents')
                .col(ng-repeat='content in row')
                  .content-kind-contents(ui-sref="content({neuronId: content.neuron_id, contentId: content.id})")
                   img.format-image(ng-src='{{content.media[0]}}')
                   .leyend-bottom
                      {{content.title}}
            .corner.recomended-TR
          .row
            .col.links-margin-top
              .row.border-bottom
                .content-subtitle {{ ::'content.max.links ' | translate }}
              .row(ng-repeat="link in vm.content.links")
                a(href='link' target='_blank') {{link}}
            .corner.links-TR
      .btns-options
        .btn-learn(ng-click="vm.learn()")
  moi-sidebar
