ion-view(
  view-title="{{ 'login' | translate }}",
  hide-nav-bar="true",
  class="login-view"
)
  ion-content(scroll="false")
    moi-sound(sound="sounds/intro.mp3" auto-play="true")
    .row.form-container
      form(ng-submit='vm.login()')
        .login-title
          | {{ ::'login' | translate }}
        .list.list-inset
          label.item.item-input
            input(
              type='email',
              ng-model='vm.loginForm.email',
              required='required',
              placeholder="{{ ::'login.email' | translate }}"
            )
          label.item.item-input
            input(
              type='password',
              ng-model='vm.loginForm.password',
              required='required',
              placeholder="{{ ::'login.password' | translate }}"
            )

        .row.button-actions
          .col
            .button
              | {{ 'signup' | translate }}
          .col
            input(
              type='submit',
              value="{{ ::'login' | translate }}"
            ).button
