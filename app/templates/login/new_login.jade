ion-view(
  view-title="{{ 'login' | translate }}",
  hide-nav-bar="true",
  class="login-view new_login"
)
  ion-content
    moi-sound(sound="sounds/btn_next.mp3" auto-play="false" callback="vmLogin.finishedSound()")
    .row.form-container
      form(ng-submit='vmLogin.submit()')
        .login-title
          | {{ ::'login' | translate }}
        .list.list-inset(ng-if="vmLogin.step === 1")
          label.item.item-input
            input(
              type='text',
              ng-model='vmLogin.form.login',
              required='required',
              placeholder="{{ ::'login.username' | translate }}"
            )
        moi-select-images(ng-if="vmLogin.step === 2"
                          images="vmLogin.images"
                          on-change="vmLogin.onSelectImage(image)")
        .row.button-actions
          .col
            .button(ui-sref="register", ng-disabled="!vmLogin.isChrome", )
              | {{ 'signup' | translate }}
          .col
            input(
              ng-disabled="!vmLogin.isChrome",
              type='submit',
              value="{{vmLogin.step === 1 ? ('login.next' | translate) : ( 'login.login' | translate)}}"
            ).button
      a.legend-browser(ng-if='!vmLogin.isChrome', href='https://www.google.com/chrome/browser/desktop/index.html')
        | {{ ::'browser.chrome' | translate }}
        
