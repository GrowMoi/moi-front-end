ion-view.search-view-max(view-title='Content')
  ion-content
    .arrow.back-arrow(back-button image-url="images/back-arrow.png")
    .flecha-sidebar(ng-click="toggleDrawer()")
      img(src="images/flecha_1.png")
    .main-search-view
      .content-searches
        form(ng-submit='searchesmodel.search()')
          label.item.item-input
            input(type='text',
                  required='required',
                  ng-model='searchesmodel.query',
                  placeholder="{{ ::'searches.search' | translate }}")
          input(
              type='submit',
              value=""
            ).button
        .result-searches
          .row.result-contents
            .col.col-25(ng-repeat='neuron in searchesmodel.neurons')
              .content-kind-contents(ui-sref="neuron({neuronId: neuron.id})")
               img.format-image(ng-src='{{neuron.contents[0].media[0]}}')
               .leyend-bottom
                  {{neuron.title}}     
        uib-pagination.pagination-sm.pagination-moi(
          ng-if='searchesmodel.totalItems',
          boundary-link-numbers='true',
          force-ellipses='true',
          max-size='searchesmodel.maxSize',
          total-items='searchesmodel.totalItems',
          ng-model='searchesmodel.currentPage',
          ng-change='searchesmodel.search()')
  moi-sidebar
