.modal.transparent.summary-test
  ion-pane.transparent
    moi-sound(ng-if="model.successAnswers > 1"
              sound="sounds/congratulations_sound.mp3"
              auto-play="true",
              only-play="true")
    .summary-title-test
      {{ 'titles.result' | translate }}
    .summary-description-test
      | {{ 'test.first_description' | translate }}
      | {{model.successAnswers}}
      | {{ 'test.second_description' | translate }}
      | {{model.totalQuestions}}
      | {{ 'test.third_description' | translate }}
    .summary-score-container.row
      .left-panel.col
        .level-user#levelUser-finalmodal
          .level-user-container
            .level-container
              .level-progress-bar
                .level-bar(style="height: {{model.percentageLevel}}%")
              img.widget(src="images/tree-user-level.png")
            img.point(src="images/tree-point-level.png")
            .counter-container
              .counter
                span
                  | {{::model.userLevel}}
                img(src= "images/tree-number-level.png")
        .user-info
          img.picture(src="images/user.png")
          span.name
            | {{::model.userInfo.username}}
      .questions-container.col-50
        .question(ng-repeat="question in model.questions track by $index")
          .title(ng-style="model.cssOptions.styles[$index+1]"
                ng-mouseover="model.increaseSize(true, model.cssOptions, $index+1)"
                ng-mouseleave="model.increaseSize(false, model.cssOptions, $index+1)")
            h4.content-question
              | {{::question.selectedAnswer}}
            img.neuron-image(ng-src="{{::question.image}}")
          .answer
            .icon(ng-class="{'correct': question.correct, 'incorrect': !question.correct}")
      .right-panel.col
        .tree-percentage#percentageTree-finalmodal
          .percentage-container
            .percentage-progress-bar
              .label
                  | {{::model.percentage}} %
              .percentage-bar(style="width: {{model.percentage}}%")
            img.widget(src="images/tree-percentage-bar.png")
        .btn-shared-result(ng-click="model.sharedResult()" data-html2canvas-ignore="true")
    .summary-footer-test(ng-style="model.cssOptions.styles[0]"
                        ng-mouseover="model.increaseSize(true, model.cssOptions, 0)"
                        ng-mouseleave="model.increaseSize(false, model.cssOptions, 0)")
      span.btn-confirm(ng-click="model.onClick()")
