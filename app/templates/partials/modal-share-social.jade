.modal.transparent
  ion-pane.transparent
    .modal-share-social
      .btn-close-modal(ng-click="model.closeModal()")
      .description-panel
        h2 {{ 'social.title' | translate}}
        | {{ 'social.description' | translate}}
      form.email-form(ng-submit='model.sendEmail()')
        input.email(
            type='email',
            ng-model='model.data.email',
            required='required',
            placeholder="{{ 'login.email' | translate }}")
        input.button(
          type='submit',
          value="{{ 'social.send' | translate }}")
