.modal.transparent
  ion-pane.transparent
    .modal-event-details
      .btn-close-modal(ng-click="::model.closeModal()")
      .event-content
        h2.event-title
          | {{::model.data.title}}
        span.event-description
          | {{::model.data.description}}
        img.event-image(ng-src="{{::model.data.image}}")
        .contents-list
          .content(ng-repeat='content in model.data.contents')
            span.content-title
              | {{::content.title}}
            img.content-image(ng-src="{{::content.media[0]}}")
