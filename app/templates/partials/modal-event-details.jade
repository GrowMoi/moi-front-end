.modal.transparent
  ion-pane.transparent
    .modal-event-details
      .btn-close-modal(ng-click="::model.closeModal()")
      .event-content
        h2.event-title
          | {{::model.data.title}}
        span.event-description
          | {{::model.data.description}}
        img.event-image(ng-src="{{::model.data.image}}")
        .neurons-list
          .neuron(ng-repeat='content in model.data.contents')
            span.neuron-title
              | {{::content.neuron}}
            img.neuron-image(ng-src="{{::content.image}}")
        .join-event(ng-class="{disabled: model.data.isAvailable}"
                    ng-click="model.joinEvent(model.data)")
          | {{ ::'tasks.events.join' | translate}}
