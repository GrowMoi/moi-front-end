.modal.transparent
  ion-pane.transparent
    .modal-image(ng-class="model.frameColor")
      .btn-close-modal(ng-class="model.frameColor" ng-click="model.closeModal()")
      img.content-image(ng-if='model.isImage' ng-src='{{model.contentSrc}}')
      embed-video(ng-if='!model.isImage && model.isEmbedVideo'
                data-ng-href='{{model.contentSrc}}'
                controls='1'
                width='100%'
                height='100%')
      video.content-video(ng-if='!model.isImage && !model.isEmbedVideo' controls autoplay preload='auto')
        source(src="{{model.contentSrc}}", type="video/mp4")
