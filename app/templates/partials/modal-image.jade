.modal.transparent
  ion-pane.transparent
    .modal-image
      .btn-close-modal(ng-click="model.closeModal()")
      img.content-image(ng-if='model.isImage' ng-src='{{model.contentSrc}}')
      .content-video(ng-if='!model.isImage')
        .loading.loading-gif
        embed-video(data-ng-href='{{model.contentSrc}}'
                controls='1'
                width='100%'
                height='100%')
