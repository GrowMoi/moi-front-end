.modal.transparent
  ion-pane.transparent
    moi-sound(ng-if="model.successAnswers > 1"
              sound="sounds/congratulations_sound.mp3"
              auto-play="true",
              only-play="true")
    .score-container.row
      .main-image.col
        img(src="images/user.png")
      .col-50
        h1#title Resultado
        .points
          p#content Respondiste {{model.successAnswers}} de {{model.totalQuestions}} preguntas correctamente
      .col
    .controls-score
      span.btn-score.button(ng-click="::model.closeModal()"
                            ng-if="!model.isQuiz") Continuar
      span.btn-score.button(ng-click="model.onClick()"
                            ng-if="model.isQuiz") Continuar
