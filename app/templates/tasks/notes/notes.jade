ion-content.content_tasks(ng-if="notesModel.notes.length !== 0")
  .row.note(ng-repeat='note in notesModel.notes')
    .text-notes(ui-sref="content({neuronId: note.neuron_id, contentId: note.content_id})")
      | {{note.note}}
  ion-infinite-scroll(ng-if='!notesModel.noMoreItemsAvailable'
                      on-infinite='notesModel.loadMoreNotes()'
                      distance='10%')
.empty-state(ng-if="notesModel.notes.length === 0")
  | {{::'tasks.note_empty_state' | translate}}
