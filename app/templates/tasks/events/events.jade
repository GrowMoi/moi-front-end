ion-content.content_tasks
  .row.note(ng-repeat='event in eventsModel.events track by $index')
    .text-notes(ng-click="eventsModel.showEventDetails($index)")
      | {{event.title}}
      br
      | {{event.event_date | date:'dd-MM-yyyy'}}
  ion-infinite-scroll(ng-if='!eventsModel.noMoreItemsAvailable'
                      on-infinite='eventsModel.loadMoreEvents()'
                      distance='10%')
